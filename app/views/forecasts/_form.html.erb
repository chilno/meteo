<%= form_with(method: 'get', local: true) do %>
    <%= label :address, "What is your address?" %><br>
    <div class="flex items-center justify-center gap-1 w-full">
        <%= text_field_tag(:address, @address || "", size: 70, placeholder: "10503 N Tantau Ave, Cupertino, CA 95014") %><br>
        <%= submit_tag("Go", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800") %>
    </div>
<% end %>